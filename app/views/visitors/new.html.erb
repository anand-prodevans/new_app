
<%= form_for @project, :as => :project, :url => visitors_path(@project) do |f| %>
    <div class="row">
        <div class="col-xs-6">
            <label class="col-md-3 control-label">Project Name</label>
            <%=f.text_field :project_name,class: "form-control input-lg", placeholder: "Enter Project"%>
            
        </div>
        <div class="col-xs-6">
            <label class="col-md-3 control-label">Environment</label>
            <%= f.select :env, options_for_select([["Select Env", ""], "Nodejs", "Php"]),{}, {:class => 'form-control input-lg'} %>

           
        </div>
    </div>
    <br>
    <div class="row">
                    
        <div class="col-xs-6">
            <label class="col-md-3 control-label">Database</label>
                        <%= f.select :db_name, options_for_select([["Select DB", ""], "Mysql", "Postgres"]),{},{:class => 'form-control input-lg'} %>
            
        </div>
                   
         <div class="col-xs-6">
     <label class="col-md-3 control-label">Storage</label>
                        <%=f.text_field :storage,class: "form-control", value: "50GB", readonly: true %>
            
        </div>
    </div>
    <br>
    <div class="row">
                   
        <div class="col-xs-6">
            <label class="col-md-3 control-label">vCPU</label>
            <div class="switch-field">
                <%= f.radio_button :vcpu, '1', :checked => true %>   
             
               <label for="switch_3_left">1</label>
                              <%= f.radio_button :vcpu, '2' %>
              
              <label for="switch_3_center">2</label>
                              <%= f.radio_button :vcpu, '3'%>
              
              <label for="switch_3_right">3</label>
           </div>
        </div>
        
        <div class="col-xs-6">
           <label class="col-md-3 control-label">Memory</label>
            <div class="switch-field">
                             <%= f.radio_button :memory, '2GB', :checked => true %>
             
              <label for="switch_3_left">2GB</label>
                              <%= f.radio_button :memory, '4GB'%>
              
               <label for="switch_3_center">4GB</label>
                       <%= f.radio_button :memory, '8GB'%>
		
              <label for="switch_3_right">8GB</label>
                               <%= f.radio_button :memory, '16GB' %>
                                     
              <label for="switch_3_right">16GB</label>
                               <%= f.radio_button :memory, '32GB'%>
                       
              <label for="switch_3_right">32GB</label>
                                  <%= f.radio_button :memory, '64GB' %>
                                
              <label for="switch_3_right">64GB</label>
            </div>
        </div>
    </div>
    <div class="row">
       <div class="col-xs-6">
                 <label class="col-md-3 control-label">Expiration Date</label>
           <%=f.text_field :exp_date, class: "form-control"%>
           
        </div>
    <div>
     <div class="col-sm-12 controls" style="margin-top: 30px">
       <%=f.submit 'Create Project', class: "btn btn-success"%>
       
    </div>
<%end%>
    




<style>
   .switch-field {
  font-family: "Lucida Grande", Tahoma, Verdana, sans-serif;
	overflow: hidden;
}


.switch-field input {
    position: absolute !important;
    clip: rect(0, 0, 0, 0);
    height: 1px;
    width: 1px;
    border: 0;
    overflow: hidden;
}

.switch-field label {
  float: left;
}

.switch-field label {
  display: inline-block;
  width: 60px;
  background-color: #e4e4e4;
  color: rgba(0, 0, 0, 0.6);
  font-size: 14px;
  font-weight: normal;
  text-align: center;
  text-shadow: none;
  padding: 6px 14px;
  border: 1px solid rgba(0, 0, 0, 0.2);
  -webkit-box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.3), 0 1px rgba(255, 255, 255, 0.1);
  box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.3), 0 1px rgba(255, 255, 255, 0.1);
  -webkit-transition: all 0.1s ease-in-out;
  -moz-transition:    all 0.1s ease-in-out;
  -ms-transition:     all 0.1s ease-in-out;
  -o-transition:      all 0.1s ease-in-out;
  transition:         all 0.1s ease-in-out;
}

.switch-field label:hover {
	cursor: pointer;
}

.switch-field input:checked + label {
  background-color: #A5DC86;
  -webkit-box-shadow: none;
  box-shadow: none;
}

.switch-field label:first-of-type {
  border-radius: 4px 0 0 4px;
}

.switch-field label:last-of-type {
  border-radius: 0 4px 4px 0;
}
</style>
